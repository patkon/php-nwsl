a { word-break: break-word; }
a img { border:none; }
img { outline:none; text-decoration:none; -ms-interpolation-mode: bicubic; }
body { width: 100% !important; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; }
#page-wrap { margin: 0; padding: 0; width: 100% !important; line-height: 100% !important; }
.preheader { display:none !important; }
a[x-apple-data-detectors] { color: inherit !important; text-decoration: none !important; font-size: inherit !important; font-family: inherit !important; font-weight: inherit !important; line-height: inherit !important; }
ul { margin-top: 0; margin-bottom: 0; padding-top: 0; padding-bottom: 0;}
ol { margin-top: 0; margin-bottom: 0; padding-top: 0; padding-bottom: 0;}
.reset-top {
margin-top: 0; padding-top: 0;
}
.reset-bottom {
margin-bottom: 0; padding-bottom: 0;
}
.layout-block-inner {
background-color: {topics_bg};
}
.mobile-only {
display: none !important;
}
h2 {
font-size: 20px;
font-family: Helvetica, Arial, Roboto, sans-serif;
font-style: normal;
font-weight:normal;
color: {primary_color};
line-height: 1.1;
margin-bottom: 6pt;
margin-top: 0;
text-align: left;
}
.text,
.footer-text {
font-size: 14px;
font-family: Helvetica, Arial, Roboto, sans-serif;
color: {text_color};
font-style: normal;
font-weight: normal;
letter-spacing: 0em;
line-height: 1.3;
margin-bottom: 0pt;
margin-top: 1pt;
text-align: left;
text-decoration: none;
}

.image-container {
margin-bottom: 10px;
}

.footer-text {
padding: 25px;
font-size: 13px;
text-align: center;
color: {text_color};
}

.footer-text a,
.footer-text a:hover,
.footer-text a:visited {
color: {primary_color};
}

.btn, .btn:hover, .btn:visited {
font-size: 18px;
font-family: Helvetica, Arial, Roboto, sans-serif;
color: {secondary_color};
text-decoration: none;

display: inline-block;

margin: 0 auto;
padding-left: 20px;
padding-right: 20px;
padding-top: 10px;
padding-bottom: 10px;
background-color: {btn_bg};
border-style: solid;
border-width: 1px;
border-color: {secondary_color};
border-radius: 5px;
}

table {
font-style: normal;
font-weight:normal;
}